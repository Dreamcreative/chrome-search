{
  "name": "chrome-search",
  "version": "1.0",
  "description": "chrome plugin,chrome search",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "bookmarks", "notifications"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_title": "chrome-search",
    "default_popup": "popup.html",
    "default_badge": "Badge"
  }
}
